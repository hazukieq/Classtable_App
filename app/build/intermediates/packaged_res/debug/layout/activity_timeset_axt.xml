<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimesetAxt">
    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:id="@+id/timesetaxt_topbar"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:layout_below="@id/timesetaxt_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="16sp"
            android:textColor="@color/qmui_config_color_gray_4"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:id="@+id/timesetaxt_hint"
            android:text="请认真阅读相关提示语哦~每天要开心快乐哟~"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/timesetaxt_add_recy"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginBottom="18dp"
            android:paddingBottom="48dp"
            android:background="@color/light_white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="保存课表数据"
            android:gravity="center"
            android:id="@+id/timesetaxt_add_saving"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_bg"
            android:textColor="@color/qmui_btn_blue_text"
            android:layout_gravity="center|bottom"
            android:textSize="22sp"/>
    </LinearLayout>
</RelativeLayout>