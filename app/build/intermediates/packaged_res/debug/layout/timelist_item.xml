<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="18dp"
    android:background="@drawable/lay_selector"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:id="@+id/lia">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/qmui_config_color_gray_2"
            android:layout_marginTop="10dp"
            android:text="作息时间卡片"
            android:id="@+id/timelist_item_title"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_below="@id/lia"
        android:id="@+id/alia">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="@color/class_orange"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="武鸣校区作息时间"
            android:id="@+id/timelist_item_itemname"
            android:textColor="@color/qmui_config_color_gray_2"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:layout_below="@id/alia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_red"
        android:text="删除"
        android:id="@+id/timelist_item_delete"
        android:paddingRight="10dp"
        android:gravity="center_vertical|right"
        android:textSize="18sp"/>
</RelativeLayout>