<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottomdialog_bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textColor="@color/text_gray"
        android:text="标题"
        android:id="@+id/bottomsheet_uni_title"/>
    <View
        android:layout_below="@id/bottomsheet_uni_title"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/light_white"
        android:id="@+id/line"/>
    <com.hazukie.scheduleviews.custom.CRecyclerView
        android:id="@+id/bottomsheet_uni_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_below="@id/line"/>
    <LinearLayout
        android:layout_below="@id/bottomsheet_uni_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/light_white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/iosbutton_confirm"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="取消"
            android:clickable="true"
            android:background="@drawable/recy_unibg"
            android:id="@+id/bottomsheet_uni_cancel"
            android:focusable="true" />
    </LinearLayout>
</RelativeLayout>