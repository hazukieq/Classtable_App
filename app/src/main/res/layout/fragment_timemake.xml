<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_white"
    android:orientation="vertical">
    <com.hazukie.scheduleviews.custom.TopbarLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/frag_timemake_topbar"
        app:title_text="新作息表文件"
        app:title_text_size="20sp"
        app:title_text_color="@color/text_gray"
        app:topbar_background_color="@color/white"
        android:layout_marginBottom="12dp"
        android:layout_alignParentTop="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_timemake_recy"
        android:layout_marginBottom="70dp"
        android:layout_below="@id/frag_timemake_topbar"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/frag_timemake_confirm"/>
    </LinearLayout>
</RelativeLayout>