<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SyncActivity"
    android:orientation="vertical"
    android:id="@+id/rget_root"
    android:background="@color/__cs_white">
    <View
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="16sp"
            android:textColor="@color/ios_ext"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:gravity="center_vertical"
            android:text="用户码">
        </TextView>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:gravity="end"
            android:paddingStart="0dp"
            android:paddingEnd="12dp"
            android:background="@null"
            android:hint="请输入文字"
            android:textColorHint="@color/iosbutton_cancel"
            android:maxLines="1"
            android:inputType="text"
            android:id="@+id/rget_edit"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择下载课表文件"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginStart="16dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rget_scroll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rget_all_files"
            android:orientation="vertical"
            android:padding="16dp">
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/class_white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/rget_download_hint"/>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:progressDrawable="@drawable/web_progress"
        android:id="@+id/rget_download_status"
        android:padding="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:text="获取文件"
            android:layout_margin="24dp"
            android:id="@+id/rget_get_btn"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="下载文件"
            android:layout_margin="24dp"
            android:id="@+id/rget_download_btn"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>