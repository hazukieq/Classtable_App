<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomdialog_bg">

        <LinearLayout
            android:id="@+id/la"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/dialog_title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/la"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="40dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_card_heading"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:textColor="@color/ios_ext"
                            android:textSize="18sp"
                            android:maxLines="1"
                            android:textColorHint="@color/text_gray"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"
                            android:id="@+id/class_subject"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="40dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_calendar_event_fill"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="40dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/ios_ext"
                            android:id="@+id/class_calendar"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="40dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_clock_fill"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="40dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/ios_ext"
                            android:id="@+id/class_time"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="40dp"
                            android:scaleType="center"
                            android:src="@drawable/ic_geo_alt_fill"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:textSize="18sp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"
                            android:maxLines="1"
                            android:textColor="@color/ios_ext"
                            android:id="@+id/class_place"/>
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/cardbg"
                        android:id="@+id/class_scroll"
                        android:layout_marginEnd="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="8dp"
                            android:textColor="@color/text_gray"
                            android:layout_gravity="center"
                            android:id="@+id/class_planote"/>
                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>