<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="18dp"
    android:background="@drawable/lay_selector"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:id="@+id/downlia">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/qmui_config_color_gray_2"
            android:layout_marginTop="10dp"
            android:text="云同步卡片" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_below="@id/downlia"
        android:id="@+id/alia">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="@color/class_orange"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="云同步课表"
            android:id="@+id/downcard_t"
            android:textColor="@color/qmui_config_color_gray_2"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/text_red"
            android:text="下载"
            android:gravity="center_vertical|right"
            android:paddingRight="8dp"
            android:id="@+id/downcard_appstate"/>
    </LinearLayout>
    <ProgressBar
        android:layout_marginTop="16dp"
        android:layout_below="@id/alia"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:progressDrawable="@drawable/web_progress"
        android:id="@+id/downcard_prog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/downcard_prog"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/qmui_btn_blue_text"
            android:text="文件大小：1M"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:id="@+id/downcard_name"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:textColor="@color/text_red"
            android:text="删除"
            android:gravity="center_vertical|right"
            android:paddingRight="8dp"
            android:id="@+id/downcard_delete"/>
    </LinearLayout>
</RelativeLayout>