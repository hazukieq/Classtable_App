<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:layout_margin="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="16sp"
            android:textColor="@color/ios_ext"
            android:padding="8dp"
            android:gravity="center"
            android:text="上午时间段"
            android:id="@+id/recy_time_item_title"
            android:layout_alignParentStart="true"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_plus"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:id="@+id/recy_time_item_add"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_white"/>
    <com.hazukie.scheduleviews.custom.CRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:maxHeight="160dp"
        android:id="@+id/recy_time_item_subrecy"
        android:layout_margin="8dp"
        android:background="@color/light_white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="24dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/class_orange"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:text="节数：0"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:id="@+id/recy_time_item_count"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="15sp"
            android:gravity="center_vertical|end"
            android:text="快捷输入"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/recy_time_item_quickAdd"/>
    </RelativeLayout>
</LinearLayout>