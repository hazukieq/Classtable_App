<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="18dp"
    android:background="@drawable/layout_bg"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:id="@+id/lia">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/qmui_config_color_gray_2"
            android:layout_marginTop="10dp"
            android:text="作息时间设定卡片"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/time_add_popup_close_btn"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
        android:layout_below="@id/lia"
        android:id="@+id/alia">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="第1节"
                android:id="@+id/time_add_popup_id"
                android:textColor="@color/class_orange"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_red"
                android:hint="上课时间-下课时间"
                android:id="@+id/time_add_popup_setTime"
                android:background="@null"
                android:textColor="@color/qmui_btn_blue_text"
                android:textSize="18sp"
                android:digits="1234567890-"
                android:maxLines="1"
                android:minLines="1"/>
        </LinearLayout>
        <TextView
            android:layout_below="@id/alia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/qmui_config_color_gray_2"
            android:lineHeight="28dp"
            android:text="\t\t提示：请输入上课时间和下课时间，格式为「小时分钟-小时分钟」，例如:0820-0900，表示上课时间为8:20，中间的-相当于”...到...“，下课时间9:00；注意，小时是个位数时，须在其前面补0。"
            android:layout_gravity="center_vertical|left"
            android:textSize="14sp"/>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/time_add_save_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_marginTop="36dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@color/s_app_color_blue_to_red"
        app:qmui_backgroundColor="@color/s_app_color_blue_3"
        app:qmui_borderColor="@color/s_app_color_blue_to_red"
        app:qmui_borderWidth="1px"
        app:qmui_skin_background="?attr/app_skin_btn_test_bg"
        app:qmui_skin_border="?attr/app_skin_btn_test_border"
        app:qmui_skin_text_color="?attr/app_skin_btn_test_border"/>
</RelativeLayout>